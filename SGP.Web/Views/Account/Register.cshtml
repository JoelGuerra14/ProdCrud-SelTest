@model SGP.Domain.Entities.User
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Registro - SGP</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #0a192f 0%, #112240 100%);
            height: 100vh;
        }

        .card-custom {
            border: none;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.5);
            background-color: #ffffff;
        }

        .btn-outline-navy {
            border: 2px solid #0a192f;
            color: #0a192f;
            border-radius: 10px;
            font-weight: 600;
            transition: all 0.3s ease;
        }

            .btn-outline-navy:hover {
                background-color: #0a192f;
                color: white;
            }

        .btn-navy-success {
            background-color: #17a2b8; 
            color: white;
            border: none;
            border-radius: 10px;
            padding: 10px;
            font-weight: 600;
        }

            .btn-navy-success:hover {
                background-color: #138496;
                color: white;
                transform: translateY(-2px);
            }

        .form-control {
            background-color: #f0f2f5;
            border: none;
            height: 50px;
        }

            .form-control:focus {
                background-color: #e6e8eb;
                box-shadow: none;
                border: 1px solid #17a2b8;
            }

        .input-group-text {
            background-color: #f0f2f5;
            border: none;
            color: #0a192f;
        }
    </style>
</head>
<body class="d-flex justify-content-center align-items-center">

    <div class="card card-custom p-5" style="width: 400px;">

        <div class="text-center mb-4">
            <i class="bi bi-person-plus-fill" style="font-size: 3rem; color: #17a2b8;"></i>
            <h4 class="mt-2 fw-bold" style="color: #0a192f;">Crear Cuenta</h4>
        </div>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger text-center">
                <i class="bi bi-exclamation-triangle-fill me-2"></i> @ViewBag.Error
            </div>
        }

        <form asp-action="Register" method="post">
            <div class="mb-3">
                <label class="form-label text-muted small fw-bold">NUEVO USUARIO</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-person"></i></span>
                    <input asp-for="Username" class="form-control" placeholder="Elige un usuario" required />
                </div>
            </div>

            <div class="mb-4">
                <label class="form-label text-muted small fw-bold">CONTRASEÑA</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-lock"></i></span>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Crea una contraseña" required />
                </div>
            </div>

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-navy-success">
                    REGISTRARSE
                </button>
                <a href="/Account/Login" class="btn btn-outline-navy mt-2">
                    <i class="bi bi-arrow-left"></i> Volver al Login
                </a>
            </div>
        </form>
    </div>

</body>
</html>